mixin brochure()
    section.brochure#Brochure
        .container
            .brochure-left 
                h3.brochure-subtitle All in one
                h2.brochure-title Brochure
                ul 
                    li 
                        p Masterplan
                    li 
                        p Lifestyle
                    li 
                        p Floor Plans
                    li 
                        p Galery
                form(action="https://form.sales-inquiries.ae/logger/form_receiver/" data-gtag-submit="popup" method="post")
                    .brochure-input
                        label
                            <svg width="18" height="22" viewBox="0 0 18 22" xmlns="http://www.w3.org/2000/svg">
